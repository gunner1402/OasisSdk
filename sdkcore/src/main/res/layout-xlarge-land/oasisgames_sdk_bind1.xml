<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="#ffffff">

    <LinearLayout
        android:layout_width="700dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dip"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="30dip"
            android:text="@string/oasisgames_sdk_bind_notice_connectto"
            android:textColor="@color/oasisgames_sdk_color_font_9f9f9f"
            android:textSize="28sp" />
        
		<LinearLayout
		    android:id="@+id/oasisgames_sdk_bind_items"
		    android:layout_width="700dip"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dip"
		    android:orientation="horizontal" 
		    android:layout_gravity="center_horizontal"
		    android:gravity="center_horizontal">
		
		    <TextView
		        android:id="@+id/oasisgames_sdk_bind_facebook"
		        android:layout_width="@dimen/oasisgames_sdk_dimen_login_textview_wh_pad"
		        android:layout_height="@dimen/oasisgames_sdk_dimen_login_textview_wh_pad"
		        android:background="@drawable/oasisgames_sdk_login_button_facebook" 
		        android:layout_marginRight="25dip"/>
		
		    <TextView
		        android:id="@+id/oasisgames_sdk_bind_oas"
		        android:layout_width="@dimen/oasisgames_sdk_dimen_login_textview_wh_pad"
		        android:layout_height="@dimen/oasisgames_sdk_dimen_login_textview_wh_pad"
		        android:background="@drawable/oasisgames_sdk_login_button_oas"  
		        android:layout_marginLeft="25dip"
		        android:layout_marginRight="25dip"/>
		    <TextView
		        android:id="@+id/oasisgames_sdk_bind_google"
		        android:layout_width="@dimen/oasisgames_sdk_dimen_login_textview_wh_pad"
		        android:layout_height="@dimen/oasisgames_sdk_dimen_login_textview_wh_pad"
		        android:background="@drawable/oasisgames_sdk_login_button_google"  
		        android:layout_marginLeft="25dip"/>
		</LinearLayout>

		<Button
            android:id="@+id/oasisgames_sdk_bind_notuser"
            android:layout_width="700dip"
            android:layout_height="90dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dip"
            android:background="@drawable/oasisgames_sdk_common_00aed9_017baa"
            android:onClick="onClick"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/oasisgames_sdk_bind_notice_error5"
            android:textColor="@color/oasisgames_sdk_color_font_FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>


</FrameLayout>