<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:id="@+id/oasisgames_sdk_menu_guide">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:orientation="vertical">
        <TextView android:layout_width="fill_parent"
            android:layout_height="400dip"
            android:background="#B2000000"/>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical">
	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/oasisgames_sdk_guide_shadow3"
		        android:orientation="horizontal" 
		        android:gravity="center_vertical">
		        <TextView android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/oasisgames_sdk_menu_control_pressed_left"/>
		       	<LinearLayout
		       	    android:id="@+id/oasisgames_sdk_menu_guide_layout"
		       	    android:orientation="horizontal"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
		        	android:background="@drawable/oasisgames_sdk_menu_content_right"
		        	android:gravity="center_vertical">
		       	    <!-- 菜单项在此显示 -->
		       	    
		       	</LinearLayout>
	        </LinearLayout>
	       	
	       	<TextView android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:background="#B2000000"/>
	    </LinearLayout>
	    <TextView android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:background="#B2000000"/>
    </LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
	    <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="430dip">
		    <RelativeLayout
			    android:id="@+id/oasisgames_sdk_menu_guide_layout_notice0"
		        android:layout_width="wrap_content"
		        android:layout_height="410dip" 
		        android:gravity="center_horizontal|bottom">
			    <TextView 
			        android:id="@+id/oasisgames_sdk_menu_guide_notice0"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/oasisgames_sdk_guide_leftbottom"
			        android:layout_marginLeft="@dimen/oasisgames_sdk_dimen_guide_og_margin_left_0"
			        android:layout_alignParentBottom="true"/>   	
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_above="@id/oasisgames_sdk_menu_guide_notice0"
			        android:layout_alignLeft="@id/oasisgames_sdk_menu_guide_notice0"
			        android:textColor="#FFFFFF"/>   	
		    </RelativeLayout>
		    <RelativeLayout
			    android:id="@+id/oasisgames_sdk_menu_guide_layout_notice2"
		        android:layout_width="wrap_content"
		        android:layout_height="410dip" 
		        android:gravity="center_horizontal|bottom">
			    <TextView 
			        android:id="@+id/oasisgames_sdk_menu_guide_notice2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/oasisgames_sdk_guide_leftbottom"
			        android:layout_marginLeft="@dimen/oasisgames_sdk_dimen_guide_og_margin_left_2"
			        android:layout_alignParentBottom="true"/>   	
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_above="@id/oasisgames_sdk_menu_guide_notice2"
			        android:layout_alignLeft="@id/oasisgames_sdk_menu_guide_notice2"
			        android:textColor="#FFFFFF"/>   	
		    </RelativeLayout>
		    <RelativeLayout
			    android:id="@+id/oasisgames_sdk_menu_guide_layout_notice4"
		        android:layout_width="wrap_content"
		        android:layout_height="410dip" 
		        android:gravity="center_horizontal|bottom">
			    <TextView 
			        android:id="@+id/oasisgames_sdk_menu_guide_notice4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/oasisgames_sdk_guide_leftbottom"
			        android:layout_marginLeft="@dimen/oasisgames_sdk_dimen_guide_og_margin_left_4"
			        android:layout_alignParentBottom="true"/>   	
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_above="@id/oasisgames_sdk_menu_guide_notice4"
			        android:layout_alignLeft="@id/oasisgames_sdk_menu_guide_notice4"
			        android:textColor="#FFFFFF"/>   	
		    </RelativeLayout>
	    </RelativeLayout>
	    <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="40dip">
	       	<RelativeLayout
			    android:id="@+id/oasisgames_sdk_menu_guide_layout_notice1"
		        android:layout_width="wrap_content"
		        android:layout_height="410dip" 
		        android:gravity="center_horizontal|top">
			    <TextView 
			        android:id="@+id/oasisgames_sdk_menu_guide_notice1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/oasisgames_sdk_guide_lefttop"
			        android:layout_marginLeft="@dimen/oasisgames_sdk_dimen_guide_og_margin_left_1"
			        android:layout_alignParentTop="true"/>   	
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@id/oasisgames_sdk_menu_guide_notice1"
			        android:layout_alignLeft="@id/oasisgames_sdk_menu_guide_notice1"
			        android:textColor="#FFFFFF"/>   	
		    </RelativeLayout>
	       	<RelativeLayout
			    android:id="@+id/oasisgames_sdk_menu_guide_layout_notice3"
		        android:layout_width="wrap_content"
		        android:layout_height="410dip" 
		        android:gravity="center_horizontal|top">
			    <TextView 
			        android:id="@+id/oasisgames_sdk_menu_guide_notice3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/oasisgames_sdk_guide_lefttop"
			        android:layout_marginLeft="@dimen/oasisgames_sdk_dimen_guide_og_margin_left_3"
			        android:layout_alignParentTop="true"/>   	
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@id/oasisgames_sdk_menu_guide_notice3"
			        android:layout_alignLeft="@id/oasisgames_sdk_menu_guide_notice3"
			        android:textColor="#FFFFFF"/>   	
		    </RelativeLayout>
	    </RelativeLayout>
	</LinearLayout>
	<TextView
	    android:id="@+id/oasisgames_sdk_menu_guide_version" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:textColor="#FFFFFF"
		android:layout_gravity="right|bottom"
		android:padding="20dp"/>
</FrameLayout>