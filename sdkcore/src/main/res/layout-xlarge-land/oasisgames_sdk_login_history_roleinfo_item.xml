<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="vertical" >
 		
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:textColor="@color/oasisgames_sdk_color_font_666666"
            android:textSize="@dimen/oasisgames_sdk_button_dimen_textsize_16"
            android:text="@string/oasisgames_sdk_login_history_server_id" />

        <TextView
            android:id="@+id/oasisgames_sdk_login_role_server_id"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:textColor="@color/oasisgames_sdk_color_font_666666"
            android:textSize="@dimen/oasisgames_sdk_button_dimen_textsize_16"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:textColor="@color/oasisgames_sdk_color_font_666666"
            android:textSize="@dimen/oasisgames_sdk_button_dimen_textsize_16"
            android:text="@string/oasisgames_sdk_login_history_role_level" />

        <TextView
            android:id="@+id/oasisgames_sdk_login_role_level"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:textColor="@color/oasisgames_sdk_color_font_666666"
            android:textSize="@dimen/oasisgames_sdk_button_dimen_textsize_16"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:textColor="@color/oasisgames_sdk_color_font_666666"
            android:textSize="@dimen/oasisgames_sdk_button_dimen_textsize_16"
            android:text="@string/oasisgames_sdk_login_history_role_name" />

        <TextView
            android:id="@+id/oasisgames_sdk_login_role_name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:textColor="@color/oasisgames_sdk_color_font_666666"
            android:textSize="@dimen/oasisgames_sdk_button_dimen_textsize_16"
            android:paddingLeft="5dp" />
    </LinearLayout>

   </LinearLayout>

   <TextView
       android:layout_width="fill_parent"
       android:layout_height="1dip"
       android:background="@color/oasisgames_sdk_color_list_divider_d1d1d1" />

</LinearLayout>