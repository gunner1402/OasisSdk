<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/oasisgames_sdk_common_bg_ffffff">
    <ScrollView android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="3">
        <TextView
            android:id="@+id/oasisgames_sdk_log_loginfo" 
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:layout_margin="10dip"
	    	android:textColor="@color/oasisgames_sdk_color_font_9f9f9f"/>
    </ScrollView>
    <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="2dip"
	    	android:background="#000000"/>
    <LinearLayout android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="7"
    	android:orientation="horizontal">
        <ScrollView android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_weight="4">
	        <TextView
	            android:id="@+id/oasisgames_sdk_log_baseinfo" 
	            android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center_horizontal"
		    	android:layout_margin="10dip"
		    	android:textColor="@color/oasisgames_sdk_color_font_9f9f9f"/>
	    </ScrollView>
	    <LinearLayout android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="vertical"
	    	android:layout_weight="6"
		    android:layout_margin="10dip"
		    android:gravity="center_vertical">
	        <TextView
	            android:id="@+id/oasisgames_sdk_log_unbind" 
	            android:layout_width="fill_parent"
		    	android:layout_height="40dip"
		    	android:text="@string/oasisgames_sdk_sandbox_unbind_notice"
		    	android:background="@drawable/oasisgames_sdk_common_00aed9_017baa"
		    	android:layout_gravity="center_horizontal"
		    	android:gravity="center"
		    	android:textColor="@color/oasisgames_sdk_color_font_FFFFFF"
		    	android:padding="10dip"/>
	        <TextView
	            android:id="@+id/oasisgames_sdk_log_close" 
	            android:layout_width="fill_parent"
		    	android:layout_height="40dip"
		    	android:layout_marginTop="20dip"
		    	android:text="@string/oasisgames_sdk_sandbox_unbind_notice3"
		    	android:background="@drawable/oasisgames_sdk_common_00aed9_017baa"
		    	android:layout_gravity="center_horizontal"
		    	android:gravity="center"
		    	android:textColor="@color/oasisgames_sdk_color_font_FFFFFF"
		    	android:padding="10dip"/>
        </LinearLayout>
	    
    </LinearLayout>
    
</LinearLayout>
