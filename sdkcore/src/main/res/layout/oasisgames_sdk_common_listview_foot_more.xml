<?xml version="1.0" encoding="utf-8"?>
<!-- ListView的头部 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dip" 
    android:gravity="center"
    android:background="@color/oasisgames_sdk_color_bg_227_227_227">
 
    <!-- 图片提示 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oasisgames_sdk_common_more"/>
    <!-- 更多 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:text="@string/oasisgames_sdk_common_more"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/oasisgames_sdk_color_font_666666"
        android:textSize="18sp" 
        android:layout_marginLeft="10dip"/>
</LinearLayout>