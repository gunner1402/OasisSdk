<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/oasisgames_sdk_color_bg_227_227_227"
        android:orientation="vertical" >

        <include layout="@layout/oasisgames_sdk_common_layout_head" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/oasisgames_sdk_picture_func"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_alignParentBottom="true"
                android:background="#f5f5f7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:text="@string/oasisgames_sdk_customer_notice10"
                    android:textColor="@color/oasisgames_sdk_color_font_666666"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:gravity="center_vertical|right"
                    android:onClick="onClickPreview"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/oasisgames_sdk_picture_func_previewnum"
                        android:layout_width="26dip"
                        android:layout_height="26dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/oasisgames_sdk_common_notice_bg2"
                        android:gravity="center"
                        android:textColor="@color/oasisgames_sdk_color_font_FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="@string/oasisgames_sdk_customer_notice12"
                        android:textColor="@color/oasisgames_sdk_color_font_00aed9"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/oasisgames_sdk_picture_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@id/oasisgames_sdk_picture_func"
                android:background="@drawable/oasisgames_sdk_common_box_grey"
                />
        </RelativeLayout>
    </LinearLayout>

</merge>