<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<com.oasis.sdk.base.utils.MyImageView 
	    android:id="@+id/oasisgames_sdk_pictrue_list_item_img"
	    android:layout_width="200dip"
	    android:layout_height="200dip"
	    android:contentDescription="@string/oasisgames_sdk_common_imageview_disctiption"
	    android:scaleType="centerInside"
	    android:layout_centerInParent="true"/>
	<TextView android:id="@+id/oasisgames_sdk_pictrue_list_item_selected"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/oasisgames_sdk_picture_selected"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="15dip"
	    android:layout_marginRight="15dip"/>
    
</RelativeLayout>

