<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/oasisgames_sdk_color_bg_227_227_227" >

    <RelativeLayout
        android:id="@+id/oasisgames_sdk_feedback_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/oasisgames_sdk_feedback_view_notice"
                android:layout_width="620dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:maxLines="5"
                android:text="@string/oasisgames_sdk_feedback_notice_device"
                android:textColor="@color/oasisgames_sdk_color_font_666666"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/oasisgames_sdk_feedback_view_email"
                android:layout_width="620dip"
                android:layout_height="60dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/oasisgames_sdk_customer_input_bg"
                android:gravity="center_vertical"
                android:hint="@string/oasisgames_sdk_feedback_hint_email"
                android:inputType="textEmailSubject"
                android:padding="3dip"
                android:singleLine="true"
                android:textColor="@color/oasisgames_sdk_color_font_9f9f9f"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/oasisgames_sdk_feedback_view_discrip"
                android:layout_width="620dip"
                android:layout_height="200dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/oasisgames_sdk_customer_input_bg"
                android:gravity="top|left"
                android:hint="@string/oasisgames_sdk_feedback_hint_discrip"
                android:inputType="textShortMessage"
                android:maxLines="5"
                android:padding="3dip"
                android:textColor="@color/oasisgames_sdk_color_font_9f9f9f"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/oasisgames_sdk_feedback_view_submit"
                android:layout_width="620dip"
                android:layout_height="64dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/oasisgames_sdk_common_00aed9_017baa"
                android:gravity="center"
                android:clickable="true"
                android:onClick="buttonOnClick"
                android:text="@string/oasisgames_sdk_common_btn_submit"
                android:textColor="@color/oasisgames_sdk_color_font_FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout        
            android:id="@+id/oasisgames_sdk_feedback_view_close"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center" 
            android:clickable="true"
            android:onClick="buttonOnClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oasisgames_sdk_forum_fuc_exit_selector" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>