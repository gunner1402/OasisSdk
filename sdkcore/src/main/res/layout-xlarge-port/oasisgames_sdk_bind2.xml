<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
        android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="@dimen/oasisgames_sdk_dimen_login_input_wh"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dip"
        android:orientation="vertical" 
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="@dimen/oasisgames_sdk_dimen_login_input_wh"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:id="@+id/oasisgames_sdk_bind_username"
                android:layout_width="@dimen/oasisgames_sdk_dimen_login_input_wh"
                android:layout_height="wrap_content"
                android:background="@drawable/oasisgames_sdk_common_input_bg_username_selector"
                android:hint="@string/oasisgames_sdk_login_hint_username"
                android:inputType="text"
                android:maxLength="50"
                android:paddingLeft="@dimen/oasisgames_sdk_dimen_login_input_padding_40"
                android:singleLine="true"
                android:textColor="@color/oasisgames_sdk_color_font_666666"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/oasisgames_sdk_bind_username_clean"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/oasisgames_sdk_bind_username_clean_img"
                    android:layout_width="@dimen/oasisgames_sdk_dimen_login_input_closebtn_wh"
                    android:layout_height="@dimen/oasisgames_sdk_dimen_login_input_closebtn_wh"
                    android:background="@drawable/oasisgames_sdk_common_input_bg_clean_selector" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/oasisgames_sdk_dimen_login_notice_margin" >

            <EditText
                android:id="@+id/oasisgames_sdk_bind_pw"
                android:layout_width="@dimen/oasisgames_sdk_dimen_login_input_wh"
                android:layout_height="wrap_content"
                android:background="@drawable/oasisgames_sdk_common_input_bg_password_selector"
                android:hint="@string/oasisgames_sdk_login_hint_password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/oasisgames_sdk_dimen_login_input_padding_40"
                android:singleLine="true"
                android:textColor="@color/oasisgames_sdk_color_font_666666"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/oasisgames_sdk_bind_password_clean"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/oasisgames_sdk_bind_password_clean_img"
                    android:layout_width="@dimen/oasisgames_sdk_dimen_login_input_closebtn_wh"
                    android:layout_height="@dimen/oasisgames_sdk_dimen_login_input_closebtn_wh"
                    android:background="@drawable/oasisgames_sdk_common_input_bg_clean_selector" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/oasisgames_sdk_bind_rule"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_marginTop="10dip"
            android:gravity="right"
            android:text="@string/oasisgames_sdk_bind_btn_userrule"
            android:textColor="@color/oasisgames_sdk_color_font_9f9f9f"
            android:textSize="@dimen/oasisgames_sdk_dimen_common_button_font_size_24" />

        <Button
            android:id="@+id/oasisgames_sdk_bind_submit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/oasisgames_sdk_dimen_login_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:background="@drawable/oasisgames_sdk_common_00aed9_017baa"
            android:onClick="onClick"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/oasisgames_sdk_bind_btn_regist"
            android:textColor="@color/oasisgames_sdk_color_font_FFFFFF"
            android:textSize="@dimen/oasisgames_sdk_dimen_common_button_font_size_24" />
    </LinearLayout>

</FrameLayout>